# Nginx Configuration for CMS Stunning Blog
# This configuration should be added to your Nginx server block

server {
    listen 80;
    listen [::]:80;
    
    # Your domain name
    server_name localhost cms-stunning-blog.local;
    
    # Document root points to the public directory ONLY
    root /home/abdelkrim/Documents/CMS-Stunning_Blog/public;
    
    # Index files
    index index.php index.html;
    
    # Logging
    access_log /var/log/nginx/cms-blog-access.log;
    error_log /var/log/nginx/cms-blog-error.log;
    
    # Default character set
    charset utf-8;
    
    # Main location block - Front Controller Pattern
    location / {
        # Try to serve the file directly, then directory, then route to index.php
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP-FPM configuration
    location ~ \.php$ {
        # Security: Don't serve files that don't exist
        try_files $uri =404;
        
        # FastCGI configuration
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;  # Adjust PHP version as needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        
        # PHP settings
        fastcgi_param PHP_VALUE "upload_max_filesize=5M \n post_max_size=5M";
        
        # Timeouts
        fastcgi_read_timeout 300;
    }
    
    # Deny access to hidden files (starting with .)
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to sensitive files
    location ~* \.(env|md|git|svn|htaccess|htpasswd)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Disable server tokens (hide Nginx version)
    server_tokens off;
}

