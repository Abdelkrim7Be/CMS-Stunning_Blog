{
    "name": "abdelkrim7be/cms-stunning-blog",
    "description": "A modern, professional CMS built with PHP - Refactored for best practices",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdelkrim7Be",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}